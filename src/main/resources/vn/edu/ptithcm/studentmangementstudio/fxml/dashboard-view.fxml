<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="vn.edu.ptithcm.studentmangementstudio.presentation.admin.DashboardPresenter">
    <VBox fx:id="vBoxMainBody" maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS">
        <MenuBar fx:id="menuBar">
            <Menu mnemonicParsing="false" text="SMStudio">
                <MenuItem fx:id="menuItemLogout" mnemonicParsing="false" onAction="#menuItemLogoutOnSelected"
                          text="Logout"/>
            </Menu>
            <Menu fx:id="menuBranch" mnemonicParsing="false" text="Branch"/>
        </MenuBar>
        <TabPane maxHeight="1.7976931348623157E308" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
            <Tab fx:id="tabStudent" text="Sinh Viên">
                <SplitPane dividerPositions="0.8" maxHeight="1.7976931348623157E308">
                    <VBox>
                        <HBox alignment="CENTER" minHeight="40.0" spacing="10.0">
                            <padding>
                                <Insets left="10.0" right="10.0"/>
                            </padding>
                            <Button fx:id="buttonCreateStudent" mnemonicParsing="false"
                                    onAction="#buttonCreateStudentOnPressed" text="Create New"/>
                            <Pane HBox.hgrow="ALWAYS"/>
                            <Button fx:id="buttonStudentUndo" mnemonicParsing="false"
                                    onAction="#buttonStudentUndoOnPressed" text="Undo"/>
                            <Button fx:id="buttonStudentRedo" mnemonicParsing="false"
                                    onAction="#buttonStudentRedoOnPressed" text="Redo"/>
                            <Button fx:id="buttonStudentSave" layoutX="296.0" layoutY="17.0" mnemonicParsing="false"
                                    onAction="#buttonStudentSaveOnPressed" text="Save"/>
                            <Pane HBox.hgrow="ALWAYS"/>
                            <TextField fx:id="textFieldSearchStudent" minWidth="100.0" promptText="Search..."
                                       HBox.hgrow="ALWAYS"/>
                            <Button fx:id="buttonSearchStudent" layoutX="20.0" layoutY="20.0" minWidth="60.0"
                                    mnemonicParsing="false" onAction="#buttonSearchStudentOnPressed" text="Search"/>
                        </HBox>
                        <TableView fx:id="tableViewStudent" maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="tableColumnStudentId" editable="false" minWidth="50.0"
                                             prefWidth="120.0" text="ID"/>
                                <TableColumn fx:id="tableColumnLastName" editable="false" minWidth="50.0"
                                             prefWidth="120.0" text="Họ Và Tên Đệm"/>
                                <TableColumn fx:id="tableColumnFirstName" editable="false" minWidth="50.0"
                                             prefWidth="120.0" text="Tên"/>
                                <TableColumn fx:id="tableColumnBirth" editable="false" minWidth="50.0" prefWidth="120.0"
                                             text="Ngày Sinh"/>
                                <TableColumn fx:id="tableColumnGender" editable="false" minWidth="50.0"
                                             prefWidth="120.0" text="Giới Tính"/>
                                <TableColumn fx:id="tableColumnAddress" editable="false" minWidth="50.0"
                                             prefWidth="120.0" text="Địa Chỉ"/>
                                <TableColumn fx:id="tableColumnClassId" editable="false" minWidth="50.0"
                                             prefWidth="120.0" text="Mã Lớp"/>
                                <TableColumn fx:id="tableColumnIsOff" editable="false" minWidth="50.0" prefWidth="120.0"
                                             text="Trạng Thái"/>
                            </columns>
                        </TableView>
                        <HBox alignment="CENTER">
                            <Button fx:id="buttonRefreshStudent" minWidth="60.0" mnemonicParsing="false"
                                    onAction="#buttonRefreshStudentOnPressed" text="Refresh">
                                <HBox.margin>
                                    <Insets left="10.0" right="10.0"/>
                                </HBox.margin>
                            </Button>
                            <Separator orientation="VERTICAL"/>
                            <ToolBar fx:id="toolbar" prefHeight="40.0" HBox.hgrow="ALWAYS">
                                <ComboBox fx:id="comboBoxId" promptText="ID"/>
                                <ComboBox fx:id="comboBoxLastName" layoutX="10.0" layoutY="12.0"
                                          promptText="Họ Và Tên Đệm"/>
                                <ComboBox fx:id="comboBoxFirstName" layoutX="72.0" layoutY="12.0" promptText="Tên"/>
                                <ComboBox fx:id="comboBoxBirth" layoutX="208.0" layoutY="12.0" promptText="Ngày Sinh"/>
                                <ComboBox fx:id="comboBoxGender" layoutX="218.0" layoutY="22.0" promptText="Giới Tính"/>
                                <ComboBox fx:id="comboBoxAddress" layoutX="228.0" layoutY="32.0" promptText="Địa Chỉ"/>
                                <ComboBox fx:id="comboBoxClassId" layoutX="238.0" layoutY="42.0" promptText="Mã Lớp"/>
                                <ComboBox fx:id="comboBoxIsOff" layoutX="248.0" layoutY="52.0" promptText="Trạng Thái"/>
                            </ToolBar>
                        </HBox>
                    </VBox>
                    <VBox>
                        <HBox alignment="CENTER_LEFT" minHeight="40.0">
                            <padding>
                                <Insets left="10.0" right="10.0"/>
                            </padding>
                            <Label text="Chi Tiết Sinh Viên">
                                <font>
                                    <Font name="System Bold" size="13.0"/>
                                </font>
                            </Label>
                        </HBox>
                        <ScrollPane VBox.vgrow="ALWAYS">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                            <GridPane hgap="5.0" vgap="15.0">
                                <columnConstraints>
                                    <ColumnConstraints/>
                                    <ColumnConstraints/>
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints/>
                                    <RowConstraints/>
                                    <RowConstraints/>
                                    <RowConstraints/>
                                    <RowConstraints/>
                                    <RowConstraints/>
                                    <RowConstraints/>
                                </rowConstraints>
                                <Label text="ID:"/>
                                <Label fx:id="labelId" GridPane.columnIndex="1"/>
                                <Label text="Họ Tên:" GridPane.rowIndex="1"/>
                                <Label fx:id="labelFullName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <Label text="Ngày Sinh:" GridPane.rowIndex="2"/>
                                <Label fx:id="labelBirth" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                <Label text="Giới Tính:" GridPane.rowIndex="3"/>
                                <Label fx:id="labelGender" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                                <Label text="Địa Chỉ:" GridPane.rowIndex="4"/>
                                <Label text="Mã Lớp:" GridPane.rowIndex="5"/>
                                <Label text="Trạng Thái:" GridPane.rowIndex="6"/>
                                <Label fx:id="labelAddress" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                                <Label fx:id="labelClassId" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                                <Label fx:id="labelIsOff" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                            </GridPane>
                        </ScrollPane>
                        <HBox fx:id="hBoxModifyStudent" alignment="CENTER_RIGHT" minHeight="40.0" spacing="10.0">
                            <padding>
                                <Insets left="10.0" right="10.0"/>
                            </padding>
                            <Button fx:id="buttonEditStudent" mnemonicParsing="false"
                                    onAction="#buttonEditEditOnPressed" prefWidth="60.0" text="Edit"/>
                            <Button fx:id="buttonDeleteStudent" mnemonicParsing="false"
                                    onAction="#buttonDeleteDeleteOnPressed" prefWidth="60.0" text="Delete"/>
                        </HBox>
                    </VBox>
                </SplitPane>
            </Tab>
            <Tab fx:id="tabClass" text="Lớp"/>
            <Tab fx:id="tabClassSubject" text="Môn Học"/>
            <Tab fx:id="tabCreditClass" text="Lớp Tín Chỉ"/>
            <Tab fx:id="tabScore" text="Điểm"/>
        </TabPane>
    </VBox>
    <HBox id="HBox" alignment="CENTER" spacing="5.0">
        <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
        </padding>
        <Label fx:id="labelBranchTag" text="Admin &gt; Khoa Viễn Thông">
            <font>
                <Font size="11.0"/>
            </font>
            <textFill>
                <Color red="0.625" green="0.625" blue="0.625"/>
            </textFill>
        </Label>
        <ProgressBar fx:id="progressBar" disable="true" maxWidth="1.7976931348623157E308" progress="0.0"
                     HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets left="10.0"/>
            </HBox.margin>
        </ProgressBar>
    </HBox>
</VBox>
